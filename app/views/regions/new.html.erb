<!-- Add region form -->
<div class="container">
  <div class="row justify-content-center mt-4 ">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">Add New Region</div>
        <div class="card-body">
          <% if @region.errors.any? %>
            <h2> The following reasons prevented the region details to be saved </h2>
            <ul>
              <%= @region.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          <% end%>
          <%= form_with scope: :region, url: regions_path, local: true do |f| %>
            <p> 
              <%= f.label :Name %> <br/>
              <%= f.text_field :name %>
            </p>
            <p><%= f.submit "Add Region", class: 'btn btn-primary'%></p>
          <% end %>
          <div class="card-footer text-muted">
            <%= link_to 'Back', regions_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>