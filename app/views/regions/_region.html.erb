<tr id="region-<%=region.id %>">
  <td><%= region.name %></td>
  <td><%= link_to 'Show', region_path(region), class: 'btn btn-info', data: {remote: true, bs_toggle: "modal", bs_target: "#showregion-#{region.id}"} %></td>
  <td><%= link_to 'Edit', edit_region_path(region), class: 'btn btn-primary', data: {remote: true, bs_toggle: "modal", bs_target: "#editregion-#{region.id}"} %></td>
  <td><%= link_to 'Delete', region_path(region) , method: :delete , data: {remote: true, confirm: "Are you sure?"}, class: 'btn btn-danger'%></td>
</tr>

<!-- Edit Region Modal -->
<div class="modal fade" id="editregion-<%= region.id %>" tabindex="-1" role="dialog" aria-labelledby="editModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalLabel">Edit Eployee Details</h5>
        <button type="button" class="closeEditForm" data-bs-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="editerrors-<%= region.id %>"></div>
        <div class="container">
          <div class="row justify-content-center mt-4 ">
            <div class="col-md-8">
              <div class="card">
                <div class="card-header">Edit Region</div>
                <div class="card-body">
                  <%= form_with(model: region, data: { remote: true}, method: :patch, id: 'edit-form' ) do |f| %>
                    <div class="form-group">
                      <%= f.label :Name %> <br/>
                      <%= f.text_field :name , class: 'form-control'%>
                    </div>
                    <div class="card-footer text-muted">
                      <%= f.submit " Update Region", class: 'btn btn-primary'%>
                      <%= link_to 'Back', regions_path, class: 'btn btn-secondary' %>          
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Region Show page modal -->
<div class="modal fade" id="showregion-<%= region.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Region Details</h4>
        <button type="button" id= "closeShowForm" class="close" data-bs-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="container mt-5">
        <div class="card">
          <div class="card-header"> 
            <h1 class="card-title"> Region Name :<%= region.name %></h1>
          </div>
          <div class= "card-body">
              <% if region.locations.any? %>
                <h2 class="card-subtitle mb-2 text-muted"> List of all Locations in <%= region.name%>
                <% region.locations.each do |location| %>
                  <li>
                    <%= location.place %>
                  </li>
                <% end %>
              <% end %>
            </div>
          <div class="card-footer text-muted">
            <%= link_to 'Back', regions_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>