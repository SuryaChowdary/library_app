<div class="container">
  <div class="row justify-content-center mt-4 ">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">Region Details</div>
        <div class="card-body">
          <div class="card-title"> Name:<%= @region.name %></div>
            <p> List of all Locations in <%= @region.name%> </p>
              <% @region.locations.each do |location| %>
                <li>
                  <%= location.place %>
                </li>
              <% end %>
          <div class="card-footer text-muted">
            <%= link_to 'Back', regions_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>