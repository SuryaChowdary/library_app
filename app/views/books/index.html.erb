<h1> List of all books in Library</h1>
<table>
  <thead>
    <tr>
      <th> Title </th>
      <th> Pages </th>
      <th \t> Published Date </th>
      <th> Summary </th>
      <th \t> Rent Options </th>
      <th colspan="3"> Actions </th>
    </tr>
  </thead>



    <tbody>
      <% @book.each do |book| %>
        <tr>
      <td><%= book.title %></td>

      <td><%= book.pages %></td>
      <td><%= book.date_of_publication %></td>
      <td><%= book.summary %></td>
      <td><%= book.rent%></td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Delete', book_path(book) , method: :delete , data: {confirm: "Are you sure?"} %></td>
        </tr>
      <% end %>
    </tbody>
</table>


<p>
  <%= link_to 'Add new Book' , new_book_path %>
</p>

<p>
  <%= link_to 'Home' , root_path %>
</p>