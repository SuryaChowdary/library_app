<h1> Add books to library </h1>
<% if @book.errors.any? %>
  <h2> The following reasons prevented the articles to be saved </h2>
    <ul>
     <%= @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
     <% end %>
    </ul>
<% end%>

<%= form_with scope: :book, url: books_path, local: true do |f| %>
  <p> 
    <%= f.label :Title %> <br/>
    <%= f.text_area :title %>
  </p>
    
  <p>
    <%= f.label :Authors%> <br/>
    <%= f.select :author_id, Author.all.collect {|x| [x.name, x.id]}, {} %>
  </p>
  
  <p> 
    <%= f.label :Pages %> <br/>
    <%= f.text_field :pages %>
  </p>
    
  <p>
    <%= f.label :Published_on %> <br/>
    <%= f.text_field :date_of_publication %>
  </p>
 
  <div class="field">    
    <%= f.label :Rent %></br>
    <span class="option">Yes<span><%= f.radio_button :rent, "Yes" %></br>
    <span class="option">No<span><%= f.radio_button :rent, "No" %></br>
  </div>

  <p> 
    <%= f.label :Summary %> <br/>
    <%= f.text_area :summary %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>