<!-- Add location form -->
<div class="container">
  <div class="row justify-content-center mt-4 ">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">Add New location</div>
        <div class="card-body">
          <%= form_with scope: :location, url: locations_path, data: {remote: true} do |f| %>
            <div class="form-group"> 
              <%= f.label :Name %> <br/>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group"> 
              <%= f.label :Region %> <br/>
              <%= f.select :region_id, Region.all.collect {|x| [x.name, x.id]}, {} , class: 'form-control' %>
            </div>
            <div class="card-footer text-muted">
              <%= f.submit "Add Location", class: 'btn btn-primary' %>
              <%= link_to 'Back' , locations_path, class:'btn btn-secondary' %>
            </div>
          <% end%>
        </div>
      </div>
    </div>
  </div>
</div>