<% if @location.errors.any? %>
  <% if params[:action] == "create" %>
    $("#newerrors").html("<%= j(render 'locations/errors', location: @location) %>");
  <% elsif params[:action] == "update" %>
    $("#editerrors-<%= @location.id %>").html("<%= j(render 'locations/errors', location: @location) %>");
  <% end %> 
<% end %>
