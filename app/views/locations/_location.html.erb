<tr id="location-<%= location.id %>">
  <td><%= location.name %></td>
  <!-- Button trigger for show location modal -->
  <td><%= link_to 'Show', location_path(location), class: 'btn btn-info', data:{remote: true, bs_toggle: "modal", bs_target: "#showlocation-#{location.id}"} %></td>
  <!-- Button trigger for edit location modal -->
  <td><%= link_to 'Edit', edit_location_path(location), class: 'btn btn-primary', data: {remote: true, bs_toggle: "modal", bs_target: "#editlocation-#{location.id}" } %></td>
  <td><%= link_to 'Delete', location_path(location) , method: :delete , data: {remote: true , confirm: "Are you sure?"}, class: 'btn btn-danger'%></td>
</tr>

<!-- Edit Location Modal -->
<div class="modal fade" id="editlocation-<%= location.id %>" tabindex="-1" role="dialog" aria-labelledby="editModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalLabel">Edit Location Details</h5>
        <button type="button" class="closeEditForm" data-bs-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="editerrors-<%= location.id %>"></div>
        <div class="container">
          <div class="row justify-content-center mt-4 ">
            <div class="col-md-8">
              <div class="card">
                <div class="card-header">Edit Location</div>
                <div class="card-body">
                  <%= form_with(model: location, data: { remote: true}, method: :patch, id: 'edit-form' ) do |f| %>
                    <div class="form-group"> 
                      <%= f.label :Name %> <br/>
                      <%= f.text_field :name, class: 'form-control' %>
                    </div>
                    <div class="form-group"> 
                      <%= f.label :Region %> <br/>
                      <%= f.select :region_id, Region.all.collect {|x| [x.name, x.id]}, {} , class: 'form-control' %>
                    </div>
                    <div class="card-footer text-muted">
                      <%= f.submit " Update Location", class: 'btn btn-primary'%>
                      <%= link_to 'Back', locations_path, class: 'btn btn-secondary' %>          
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Location Show page modal -->
<div class="modal fade" id="showlocation-<%= location.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Location Details</h4>
        <button type="button" id= "closeShowForm" class="close" data-bs-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="container mt-5">
        <div class="card">
          <div class="card-header"> 
            <h1 class="card-title"> Location Name :<%= location.name %></h1>
          </div>
          <div class= "card-body">
              <% if location.companies.any? %>
                <h2 class="card-subtitle mb-2 text-muted"> List of all companies in <%= location.name %>
                <% location.companies.each do |company| %>
                  <li>
                    <%= company.name %>
                  </li>
                <% end %>
              <% end %>
            </div>
          <div class="card-footer text-muted">
            <%= link_to 'Back', locations_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>