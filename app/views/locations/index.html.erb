<h1> List of all Locations </h1>
<table>
  <thead>
    <tr>
      <th> Places </th>
      <th colspan=3> Actions </th>
    </tr>
  </thead>



    <tbody>
      <% @location.each do |location| %>
        <tr>
      <td><%= location.place %></td>
      <td><%= link_to 'Show', location_path(location) %></td>
      <td><%= link_to 'Edit', edit_location_path(location) %></td>
      <td><%= link_to 'Delete', location_path(location) , method: :delete , data: {confirm: "Are you sure?"}%></td>
        </tr>
      <% end %>
    </tbody>
</table>


<p>
  <%= link_to 'Add new Location' , new_location_path %>
</p>

<p>
  <%= link_to 'Home' , root_path %>
</p>