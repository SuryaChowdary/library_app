<h1> Add New Location </h1>

<%= form_with scope: :location, url: locations_path, local: true do |f| %>
  <p> 
    <%= f.label :Name %> <br/>
    <%= f.text_area :name %>
  </p>

  <p> 
    <%= f.label :Region %> <br/>
    <%= f.select :region_id, Region.all.collect {|x| [x.name, x.id]}, {} %>
  </p>

  <p>
    <%= f.submit "Add Location" %>
  </p>

  <p>
    <%= link_to 'Back' , locations_path %>
  </p>
<% end%>