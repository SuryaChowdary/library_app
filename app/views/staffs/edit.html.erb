<h1> Edit Staff Details </h1>
<div class="container">
  <div class="row justify-content-center mt-4 ">
    <div class="col-md-5">
      <div class="card">
        <div class="card-header">Edit Staff Details</div>
        <div class="card-body">
          <% if @staff.errors.any? %>
            <h2> The following reasons prevented the staff details to be saved </h2>
              <ul>
              <%= @staff.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
          <% end%>
          <%= form_with(model: @staff, local: true) do |f| %>

            <div class="form-group">
              <%= f.label :Name %> <br/>
              <%= f.text_field :name,class: 'form-control'%>
            </div>
            <div class="form-group">
              <%= f.label :Email %> <br/>
              <%= f.text_field :email , class: 'form-control'%>
            </div>
            <div class="form-group"> 
              <%= f.label :Phonenumber %> <br/>
              <%= f.text_field :phonenumber , class: 'form-control' %>
            </div>
            <div class="field">    
              <%= f.label :gender %></br>
              <span class="option">Male<span><%= f.radio_button :gender, "Male" %></br>
              <span class="option">Female<span><%= f.radio_button :gender, "Female" %></br>
              <span class="option">Others<span><%= f.radio_button :gender, "Others" %></br>
            </div>
            <div class="form-group">
              <%= f.label :Age%> <br/>
              <%= f.text_field :age %>
            </div>
            <div class="form-group">
              <%= f.label :Date_of_birth %> <br/>
              <%= f.text_field :date_of_birth %>
            </div>
            <div class="form-group"> 
              <%= f.label :Address %> <br/>
              <%= f.text_area :address, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.submit "Update Staff" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>