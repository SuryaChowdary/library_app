<!-- Add staff form -->
<h1> Add Staff members to library </h1>
<div class="container">
  <div class="row justify-content-center mt-4 ">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">Add New Staff</div>
        <div class="card-body">
          <%= form_with scope: :staff, url: staffs_path, data:{remote: true} do |f| %>
            <div class="form-group">
              <%= f.label :Name %> <br/>
              <%= f.text_field :name,class: 'form-control'%>
            </div>
            <div class="form-group">
              <%= f.label :Email %> <br/>
              <%= f.text_field :email , class: 'form-control'%>
            </div>
            <div class="form-group"> 
              <%= f.label :Phonenumber %> <br/>
              <%= f.text_field :phonenumber , class: 'form-control' %>
            </div>
            <div class="field">    
              <%= f.label :gender %></br>
              <span class="option">Male<span><%= f.radio_button :gender, "Male" %></br>
              <span class="option">Female<span><%= f.radio_button :gender, "Female" %></br>
              <span class="option">Others<span><%= f.radio_button :gender, "Others" %></br>
            </div>
            <div class="form-group">
              <%= f.label :Age%> <br/>
              <%= f.text_field :age , class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :Date_of_birth %> <br/>
              <%= f.text_field :date_of_birth, class: 'form-control'%>
            </div>
            <div class="form-group"> 
              <%= f.label :Address %> <br/>
              <%= f.text_area :address, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.submit "Add Staff", class: 'btn btn-primary mt-2' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>