<h1> Edit Author details in  library </h1>
<% if @author.errors.any? %>
  <h2> The following reasons prevented the author details to be saved </h2>
    <ul>
     <%= @author.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
     <% end %>
    </ul>
<% end%>


<%= form_with(model: @author, local: true) do |f| %>

  <p> 
    <%= f.label :Name %> <br/>
    <%= f.text_area :name %>
  </p>
    

  <div class="field">    
    <%= f.label :gender %></br>
    <span class="option">Male<span><%= f.radio_button :gender, "Male" %></br>
    <span class="option">Female<span><%= f.radio_button :gender, "Female" %></br>
    <span class="option">Others<span><%= f.radio_button :gender, "Others" %></br>
  </div>

  <p>
    <%= f.label :Age%> <br/>
    <%= f.text_field :age %>
  </p>

    
  <p>
    <%= f.label :Date_of_birth %> <br/>
    <%= f.text_field :date_of_birth %>
  </p>

  

  <p> 
    <%= f.label :Address %> <br/>
    <%= f.text_area :address %>
  </p>


  <p>
    <%= f.submit "Update Author" %>
  </p>
<% end %>