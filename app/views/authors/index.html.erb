<h1> List of all Authors in Library</h1>
<table class="table">
  <thead>
    <tr>
      <th> Name </th>
      <th> Gender </th>
      <th> Age </th>
      <th> Date_of_birth </th>
      <th> Address </th>
      <th colspan="3"> Actions </th>
    </tr>
  </thead>
    <tbody id= "author-table">
      <% @authors.each do |author| %>
        <%= render 'author', author: author %>
      <% end %>
    </tbody>
</table>

<!-- Button trigger modal -->
<button type="button", class="btn btn-primary", data-bs-toggle="modal", data-bs-target="#newModal">
  Add New Author
</button>
<!-- Add Company Modal -->
<div class="modal fade" id="newModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Add new Author</h5>
        <button type="button" id= "closeNewForm" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="newerrors"></div>
        <%= render 'form'%>
      </div>
    </div>
  </div>
</div>

<p>
  <%= link_to 'Home' , root_path, class: 'btn btn-warning' %>
</p>