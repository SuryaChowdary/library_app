<h1> List of all Authors in Library</h1>
<table class="table">
  <thead>
    <tr>
      <th> Name </th>
      <th> Gender </th>
      <th> Age </th>
      <th> Date_of_birth </th>
      <th> Address </th>
      <th colspan="3"> Actions </th>
    </tr>
  </thead>
    <tbody>
      <% @authors.each do |author| %>
        <tr>
      <td><%= author.name %></td>
      <td><%= author.gender %></td>
      <td><%= author.age %></td>
      <td><%= author.date_of_birth%></td>
      <td><%= author.address%></td>
      <td><%= link_to 'Show', author_path(author), class: 'btn btn-info' %></td>
      <td><%= link_to 'Edit', edit_author_path(author), class: 'btn btn-primary' %></td>
      <td><%= link_to 'Delete', author_path(author) , method: :delete , data: {confirm: "Are you sure?"}, class:'btn btn-danger'%></td>
        </tr>
      <% end %>
    </tbody>
</table>

<p>
  <%= link_to 'Add new Author' , new_author_path, class: 'btn btn-primary' %>
</p>

<p>
  <%= link_to 'Home' , root_path, class: 'btn btn-warning' %>
</p>