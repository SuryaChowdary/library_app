<!-- Add Authors form -->
<div class="container">
  <div class="row justify-content-center mt-4 ">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">Add New Author</div>
        <div class="card-body">
          <%= form_with scope: :author, url: authors_path, data: {remote: true} do |f| %>
            <div class="form-group"> 
              <%= f.label :Name %> <br/>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">    
              <%= f.label :Gender %></br>
              <span class="option">Male<span><%= f.radio_button :gender, "Male" %></br>
              <span class="option">Female<span><%= f.radio_button :gender, "Female" %></br>
              <span class="option">Others<span><%= f.radio_button :gender, "Others" %></br>
            </div>
            <div class="form-group">
              <%= f.label :Age%> <br/>
              <%= f.text_field :age, class: 'form-control' %>
            </div>
            <div class="form-group"> 
              <%= f.label :Date_of_birth %> <br/>
              <%= f.text_field :date_of_birth, class: 'form-control'%>
            </div>
            <div class="form-group">
              <%= f.label :Address %> <br/>
              <%= f.text_field :address, class: 'form-control' %>
            </div>
            <div class="card-footer text-muted">
              <%= f.submit "Add Author", class: 'btn btn-primary' %>
              <%= link_to 'Back' , authors_path, class:'btn btn-secondary' %>
            </div>
          <% end%>
        </div>
      </div>
    </div>
  </div>
</div>