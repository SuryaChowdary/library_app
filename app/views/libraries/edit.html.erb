<h1> Edit Library Details</h1>
<% if @library.errors.any? %>
  <h2> The following reasons prevented the library details to be saved </h2>
    <ul>
     <%= @library.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
     <% end %>
    </ul>
<% end%>


<%= form_with(model: @library, local: true) do |f| %>

  <p> 
    <%= f.label :Name %> <br/>
    <%= f.text_area :name %>
  </p>

  <p><%= f.submit "Update Library" %></p>
<% end %>