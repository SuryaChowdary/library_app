<h1> List of all Libraries</h1>
<table>
  <thead>
    <tr>
      <th> Name </th>
      <th colspan=3> Actions </th>
    </tr>
    <tr>
  </thead>
    <tbody>
      <% @library.each do |library| %>
        <tr>
      <td><%= library.name %></td>
      <td><%= link_to 'Show', library_path(library) %></td>
      <td><%= link_to 'Edit', edit_library_path(library) %></td>
      <td><%= link_to 'Delete', library_path(library) , method: :delete , data: {confirm: "Are you sure?"}%></td>
        </tr>
      <% end %>
      
    </tbody>
</table>

<p><%= link_to 'Add new library' , new_library_path %></p>

<p><%= link_to 'Home' , root_path %></p>