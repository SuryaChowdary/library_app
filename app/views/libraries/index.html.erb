<h1> List of all Libraries</h1>
<table class="table">
  <thead>
    <tr>
      <th> Name </th>
      <th colspan=3> Actions </th>
    </tr>
    <tr>
  </thead>
    <tbody id="library-table" >
      <% @libraries.each do |library| %>
        <%= render 'library', library: library %>
      <% end %>
    </tbody>
</table>

<!-- Button trigger modal -->
<button type="button", class="btn btn-primary", data-bs-toggle="modal", data-bs-target="#newModal">
  Add New Library
</button>
<!-- Add Library Modal -->
<div class="modal fade" id="newModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Add new Library</h5>
        <button type="button" id= "closeNewForm" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="newerrors"></div>
        <%= render 'form'%>
      </div>
    </div>
  </div>
</div> 

<p><%= link_to 'Home' , root_path , class: 'btn btn-warning mt-2' %></p>