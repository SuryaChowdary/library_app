<h1> List of all Libraries</h1>
<table class="table">
  <thead>
    <tr>
      <th> Name </th>
      <th colspan=3> Actions </th>
    </tr>
    <tr>
  </thead>
    <tbody>
      <% @libraries.each do |library| %>
        <tr>
      <td><%= library.name %></td>
      <td><%= link_to 'Show', library_path(library), class: 'btn btn-info' %></td>
      <td><%= link_to 'Edit', edit_library_path(library), class: 'btn btn-primary' %></td>
      <td><%= link_to 'Delete', library_path(library) , method: :delete , data: {confirm: "Are you sure?"}, class: 'btn btn-danger'%></td>
        </tr>
      <% end %>
    </tbody>
</table>

<p><%= link_to 'Add new library' , new_library_path , class: 'btn btn-primary' %></p>

<p><%= link_to 'Home' , root_path , class: 'btn btn-warning' %></p>