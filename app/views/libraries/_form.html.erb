<!-- Add library form -->
<div class="container">
  <div class="row justify-content-center mt-4 ">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">Add New Library</div>
        <div class="card-body">
          <%= form_with scope: :library, url: libraries_path, data: {remote: true} do |f| %>
            <div class="form-group"> 
              <%= f.label :Name %> <br/>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group"> 
              <%= f.label :Company %> <br/>
              <%= f.select :company_id, Company.all.collect {|x| [x.name, x.id]}, {} , class: 'form-control' %>
            </div>
            <div class="card-footer text-muted">
              <%= f.submit "Add Library", class: 'btn btn-primary' %>
              <%= link_to 'Back' , libraries_path, class:'btn btn-secondary' %>
            </div>
          <% end%>
        </div>
      </div>
    </div>
  </div>
</div>