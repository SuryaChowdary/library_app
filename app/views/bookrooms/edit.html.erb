<h1> Edit Library </h1>

  <%= form_with(model: @bookroom, local: true) do |f| %>

  <p> 
    <%= f.label :Name %> <br/>
    <%= f.text_area :name %>
  </p>

  <p> 
    <%= f.label :Locations %> <br/>
    <%= f.select :location_ids, Location.all.collect {|x| [x.place, x.id]}, {}, :multiple => true %>
  </p>

  <p>
    <%= f.submit "Update Library name" %>
  </p>

  <p>
    <%= link_to 'Back' , bookrooms_path %>
  </p>

<% end %>