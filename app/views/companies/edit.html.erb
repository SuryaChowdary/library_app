<h1> Edit Company Details </h1>

  <%= form_with(model: @company, local: true) do |f| %>

  <p> 
    <%= f.label :Name %> <br/>
    <%= f.text_area :name %>
  </p>

  <p> 
    <%= f.label :Locations %> <br/>
    <%= f.select :location_ids, Location.all.collect {|x| [x.name, x.id]}, {}, :multiple => true %>
  </p>

  <p>
    <%= f.submit "Update Company name" %>
  </p>

  <p>
    <%= link_to 'Back' , companies_path %>
  </p>

<% end %>